<Window x:Class="Firestorm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Firestorm"
        mc:Ignorable="d"
        Title="PPaint" Height="720" Width="1280">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" />
                <MenuItem Header="Open" />
                <MenuItem Header="Save" />
                <Separator />
                <MenuItem Header="Exit" />
            </MenuItem>
        </Menu>
        <Rectangle Fill="Black" />
        <Image x:Name="MainImage" Stretch="UniformToFill" HorizontalAlignment="Left" VerticalAlignment="Top" MouseMove="MainImage_MouseMove" MouseLeftButtonDown="MainImage_MouseLeftButtonDown" MouseRightButtonDown="MainImage_MouseRightButtonDown" />
    </DockPanel>
</Window>
